<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.st.myapplication.OdgovoriteNaPitanja">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/pitanje"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:editable="false"/>




        <Button
            android:id="@+id/pogresan2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="11dp"
            android:background="#0000FF"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_below="@+id/pogresan1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/pogresan3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/pogresan2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="11dp"
            android:background="#0000FF"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/tacanOdgovor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pitanje"
            android:background="#0000FF"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/pogresan1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tacanOdgovor"
            android:layout_marginTop="12dp"
            android:background="#0000FF"
            android:textColorHint="#000000"
            android:textAlignment="center"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
